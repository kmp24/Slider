<script src='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-compare/v0.1.0/mapbox-gl-compare.js'></script>
<link rel='stylesheet' href='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-compare/v0.1.0/mapbox-gl-compare.css' type='text/css' />

<div id='before' class='map'></div>
<div id='after' class='map'></div>
<script>
mapboxgl.accessToken = 'pk.eyJ1Ijoia21wZXJoYW0iLCJhIjoiY2pid2ZweXRpMmRtdzMzbzB5bnJleDlwayJ9.lz0J18oop1su6_5kO58qnw';
var beforeMap = new mapboxgl.Map({
    container: 'before',
    zoom: 9,
    center: [-70.7927459,43.2240003],
    style: 'mapbox://styles/mapbox/mapbox.mapbox-terrain-v2',
    hash: false
});

beforeMap.on('load', function () {

    beforeMap.addLayer({
        "id": "kmperham.30aptgwr",
        "type": "line",
        "source": {
            type: 'vector',
            url: 'mapbox://mapbox.mapbox-terrain-v2'
        },
        "source-layer": "contour",
        "layout": {
            "line-join": "round",
            "line-cap": "round"
        },
        "paint": {
            "line-color": "#ff69b4",
            "line-width": 1

var afterMap = new mapboxgl.Map({
    container: 'after',
    zoom: 9,
    center: [-70.7927459,43.2240003],
    style: 'mapbox://styles/mapbox/satellite-v9',
    hash: false
});

var map = new mapboxgl.Compare(beforeMap, afterMap, {
    // Set this to enable comparing two maps by mouse movement:
    // mousemove: true
});
</script>

